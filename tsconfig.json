{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "lib": ["ES2021.String"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*", "dist/**/*"]
}
